      print("\nSelect another number: ", numberchoice2)
    elif num1 == "4":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "7":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "8":
      print("\nSelect another number: ", numberchoice2)
    else:
      print("Please enter one of the numbers shown.")


  elif color == "Yellow":
    print("\nSelect a number:", numberchoice1)

    num1 = input("\nNumber: ")

    if (int(num1) % 2) == 0:
      numberchoice2 = set1
    else:
      numberchoice2 = set2

    if num1 == "1":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "2":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "5":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "6":
      print("\nSelect another number: ", numberchoice2)
    else:
      print("Please enter one of the numbers shown.")


  elif color == "Green":
    print("\nSelect a number:", numberchoice1)

    num1 = input("\nNumber: ")

    if (int(num1) % 2) == 0:
      numberchoice2 = set1
    else:
      numberchoice2 = set2

    if num1 == "3":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "4":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "7":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "8":
      print("\nSelect another number: ", numberchoice2)
    else:
      print("Please enter one of the numbers shown.")
  
  else:
    print("\nPlease enter one of the colors presented (Case sensitive).")
    

  num2 = input("\nNumber:")

  if num2 == "1":
    print("\Text Example 1")
  elif num2 == "2":
    print("\nText Example 2")
  elif num2 == "3":
    print("\nText Example 3")
  elif num2 == "4":
    print("\nText Example 4")
  elif num2 == "5":
    print("\nText Example 5")
