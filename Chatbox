def chatBox():
#Function start up message
  text = "Chatter Box v1\n"
  txt = text.center(20)
  print(txt)

  print("Select a color:\n ")
  print(" \n 1. Blue \n 2. Green \n 3. Red \n 4. Yellow")

  color = input("\nColor: ")

  set1 = 1, 2, 5, 6
  set2 = 3, 4, 7, 8
  
  if (len(color) % 2) == 0:
    numberchoice1 = set1
  else:
    numberchoice1 = set2 
  
  

  if color == "Blue":
   
    print("\nSelect a number:", numberchoice1)

    num1 = input("\nNumber: ")

    if (int(num1) % 2) == 0:
      numberchoice2 = set1
    else:
      numberchoice2 = set2

    if num1 == "1":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "2":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "5":
      print("\nSelect another number: ", numberchoice2)
    elif num1 == "6":
      print("\nSelect another number: ", numberchoice2)
    else:
      print("Please enter one of the numbers shown.")


  elif color == "Red":
    print("\nSelect a number:", numberchoice1)

    num1 = input("\nNumber: ")

    if (int(num1) % 2) == 0:
      numberchoice2 = set1
    else:
      numberchoice2 = set2

